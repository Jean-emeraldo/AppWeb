<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Liste des produits</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Barre de navigation -->
    <nav class="navbar">
        <div class="navbar-container">
            <a href="/" class="navbar-brand">AppWeb</a>
            <ul class="navbar-menu">
                <li><a href="/">Accueil</a></li>
                <li><a href="/Product/Index">Produits</a></li>
                <li><a href="/Product/Create">Ajouter un produit</a></li>
            </ul>
        </div>
    </nav>

    <!-- Contenu principal -->
    <main>
        <div class="container">
            <h1>Liste des produits</h1>

            <!-- Bouton pour ajouter un produit -->
            <a href="/Product/Create" class="btn">Ajouter un produit</a>

            <table>
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Image</th>
                        <th>Prix</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td><img src="@product.ImageUrl" alt="@product.Name" /></td>
                            <td>
                                @product.Price.ToString("C")
                                <!-- Bouton "Acheter" -->
                                <a href="/Product/Buy/@product.Id" class="btn btn-buy">Acheter</a>
                            </td>
                            <td>@product.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>

    <footer class="footer border-top text-muted py-3">
        <div class="container">
            &copy; 2025 - AppWeb - <a href="@Url.Action("Privacy", "Home")">Privacy</a>
        </div>
    </footer>
    
 
</body>
</html>