@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site1.css" />
    <title>Vente de PC Professionnels</title>

    
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-container">
            <a href="@Url.Action("NewPage", "Product")" class="navbar-brand">Home</a>
            <ul class="navbar-menu">
                <li><a href="@Url.Action("Apropos", "Product")">À propos</a></li>
                <li><a href="@Url.Action("Index", "Product")">Produits</a></li>
                <li><a href="@Url.Action("Create", "Product")">Ajouter un produit</a></li>
                <li class="nav-item">
                    <a class="nav-link" href="#" id="deconnecter">Déconnecter</a>
                </li>
            </ul>
        </div>
    </nav>

 
    <section class="services">
        <h2>NOS SERVICES</h2>
        <div class="service-list">
            <div class="service-item">
                <img src="~/images/pc3.jpg" alt="Professionnels" />
                <h3>Pour les professionnels</h3>
                <p>Des solutions de pointe pour répondre aux besoins des entreprises en matière de performance informatique.</p>
            </div>
            <div class="service-item">
                <img src="~/images/pc3.jpg" alt="Jeux et performance" />
                <h3>Pour le gaming et la performance</h3>
                <p>Des configurations puissantes pour une expérience de jeu optimale et un multitâche sans limite.</p>
            </div>
            <div class="service-item">
                <img src="~/images/pc3.jpg" alt="Startups et PME" />
                <h3>Pour les startups et PME</h3>
                <p>Des solutions sur mesure adaptées aux petites et moyennes entreprises pour booster la productivité.</p>
            </div>
            <div class="service-item">
                <img src="~/images/pc3.jpg" alt="Créateurs de contenu" />
                <h3>Pour les créateurs de contenu</h3>
                <p>Des PC optimisés pour le montage vidéo, la création graphique et le streaming.</p>
            </div>
        </div>
    </section>

  
    <section class="hero">
        <div class="hero-carousel">
            <img src="~/images/pc1.jpg" alt="PC Professionnel 1" class="hero-image"/>
            <img src="~/images/pc2.jpg" alt="PC Professionnel 2" class="hero-image"/>
            <img src="~/images/pc3.jpg" alt="PC Professionnel 3" class="hero-image"/>
            <img src="~/images/pc4.jpg" alt="PC Professionnel 4" class="hero-image"/>
        </div>
    </section>

   
    <section class="trusted">
        <p>Fiers d'être partenaires de :</p>
        <div class="logos">
            <img src="~/images/pc1.jpg" alt="Partenaire 1" />
            <img src="~/images/pc10.jpg" alt="Partenaire 2" />
            <img src="~/images/pc2.jpg" alt="Partenaire 3" />
            <img src="~/images/pc1.jpg" alt="Partenaire 4" />
        </div>
    </section>

 
    <section class="about">
        <div class="about-content">
            <div class="about-text">
                <h2>À PROPOS DE NOTRE ENTREPRISE</h2>
                <p>
                    Nous proposons une large gamme de PC professionnels, adaptés à tous les besoins : travail, gaming, création de contenu et plus encore.  
                    Nos solutions informatiques sont conçues pour offrir des performances optimales et une fiabilité à long terme.  
                    Faites confiance à notre expertise pour équiper votre entreprise avec les meilleurs outils technologiques.
                </p>
            </div>
            <img src="~/images/pc6.jpg" alt="Équipe" class="about-image" />
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer border-top text-muted py-3">
        <div class="container">
            &copy; 2025 - AppWeb
        </div>
    </footer>

    <!-- Boîte de dialogue de déconnexion -->
    <div id="logoutDialog" class="dialog-overlay">
        <div class="dialog-box">
            <h2>Voulez-vous vraiment quitter ce site ?</h2>
            <div class="dialog-buttons">
                <button id="confirmLogout" class="dialog-button confirm">Quitter</button>
                <button id="cancelLogout" class="dialog-button cancel">Annuler</button>
            </div>
        </div>
    </div>

    <!-- Script pour la boîte de dialogue de déconnexion -->
    <script>
        document.getElementById("deconnecter").addEventListener("click", function(event) {
            event.preventDefault(); // Empêche le comportement par défaut du lien

            // Affiche la boîte de dialogue modale
            document.getElementById("logoutDialog").style.display = "flex";
        });

        document.getElementById("confirmLogout").addEventListener("click", function() {
            // Redirection vers la page de déconnexion
            window.location.href = "@Url.Action("Logout", "Account")"; // Remplace par la bonne route
        });

        document.getElementById("cancelLogout").addEventListener("click", function() {
            // Cache la boîte de dialogue modale
            document.getElementById("logoutDialog").style.display = "none";
        });
    </script>
</body>
</html>